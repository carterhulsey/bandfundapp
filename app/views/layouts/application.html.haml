    = javascript_include_tag "application"
    = yield(:page_javascript)
    :javascript
      $(document).foundation();

    :javascript
      var menu = $('.main-menu ul');
      var showMenu = $('.show-menu');
      var hideMenu = $('.hide-menu');
      menu.hide();
      hideMenu.hide();
      hideMenu.on('click', function(){
        menu.hide();
        hideMenu.hide();
        showMenu.show();
      })

      showMenu.on('click', function(){
        menu.show();
        hideMenu.show();
        showMenu.hide();
      })
