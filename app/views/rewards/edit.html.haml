= form_for @reward, url:  artist_reward_path(current_artist, params[:id]) do |form|
  %p
    = form.label :title
    = form.text_field :title
  %p
    = form.label :price, "Price in Dollars"
    = form.text_field :price
  %p
    = form.label :description
    = form.text_field :description
  %p
    = form.label :address_required, "Require Address?"
    = form.check_box :address_required
  = submit_tag
  %br
  = link_to "Delete Reward", artist_reward_path(current_artist, params[:id]), data: { method: "delete"}