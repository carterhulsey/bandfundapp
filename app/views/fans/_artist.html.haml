%li.card
  .thumbnail
    - if artist.image == nil
      = link_to( image_tag("http://placehold.it/3300x500&text=fanheader"), artist_path(artist.id))
    -else
      = link_to( image_tag(artist.image), artist_path(artist.id))
  .caption
    %h3= artist.name
    %h4= artist.genre
    %p= artist.about_me[0...100].html_safe unless artist.about_me == nil
    %a.button.button-green{:href => artist_path(artist.id)} Pledge
