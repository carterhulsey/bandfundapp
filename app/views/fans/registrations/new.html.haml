%section#signup-fb
  .row
    .small-6.columns
      .signup-info
        %img.logo{:alt => "", :width => "100px", :src => image_path("piggy-white.svg")}/
        %h2 Music has worth.
        %p Bandfund allows artists to focus on making the music that we love.
    .small-6.columns.well
      / .facebook-signup
      /   %h3 Sign up with Facebook    
      /   %a.button.button-fb{:href => "/auth/facebook_fan"}
      /     %img{:alt => "", :src => image_path("icons/facebook.svg")}>/
      /     Sign up with Facebook
      /   %br
      /   %br
      /   = link_to "Sign up without Facebook",{view: :regular_signup}, remote: true
      .regular-signup
        %h3 Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          %div
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true
          %div
            = f.label :password
            - if @validatable
              %i
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off"
          %div
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off"
          %div= f.submit "Sign up", :class => "button, button-green"
          / = link_to "Sign up with Facebook",{view: :facebook_signup}, remote: true
      = render "artists/shared/links"