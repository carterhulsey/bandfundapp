.container
  %section#checkout-form
    = form_tag("/rewards/#{@reward.id}/pledges",method: 'POST', id: "payment-form") do 
      .row
        #checkout-form.small-8.columns
          .row
            #name-form.small-12.columns
              .row
                .small-6.columns
                  %label{:for => "First_Name"} First Name
                  %input{:id => "First_Name", :name => "First_Name", :placeholder => "John", :type => "text"}/
                .small-6.columns
                  %label{:for => "Last_Name"} Last Name
                  %input{:id => "Last_Name", :name => "Last_Name", :placeholder => "Smith", :type => "text"}/
              .row
                .small-12.columns
                  %label{:for => "Email"} Email
                  %input{:name => "Email", :placeholder => "fan@bandfund.com", :type => "text"}/
            #address-info.small-12.columns
              %h4 Billing Address
              .row
                .small-12.columns
                  %label{:for => "Address1"} Address 1
                  %input{:name => "Address1", :placeholder => "123 Street", :type => "text"}/
              .row
                .small-12.columns
                  %label{:for => "Address2"} Address 2
                  %input{:name => "Address2", :placeholder => "Apartment/Suite", :type => "text"}/
              .row
                .small-6.columns
                  %label{:for => "City"} City
                  %input{:name => "City", :placeholder => "Joplin", :type => "text"}/
                .small-6.columns
                  %label{:for => "State"} State
                  %input{:name => "State", :placeholder => "Missouri", :type => "text"}/
              .row
                .small-6.columns
                  %label{:for => "ZIP"} ZIP
                  %input{:name => "ZIP", :placeholder => "64804", :type => "text"}/
                .small-6.columns
                  %label{:for => "Country"} Country
                  %input{:name => "Country", :placeholder => "USA", :type => "text"}/
            #billing-info.small-12.columns
              .row
                .small-6.columns
                  %label{:for => "card_number"} Credit Card Number
                  %input{id: "card_number", "data-stripe" => "number", :size => "20", :type => "text"}/
                .small-3.columns
                  %label{:for => "card_month"} Month
                  %input{id: "card_month", "data-stripe" => "exp-month", :size => "2", :type => "text"}/
                .small-3.columns
                  %label{:for => "card_year"} Year
                  %input{id: "card_year", "data-stripe" => "exp-year", :size => "4", :type => "text"}/
              .row
                .small-6.columns
                  %label{:for => "security_code"} Security Code
                  %input{id: "security_code", "data-stripe" => "cvc", :size => "4", :type => "text"}/
                .small-6.columns
                  %label{:for => "billing_zip"} Billing ZIP
                  %input{id: "billing_zip", :name => "Billing ZIP", :placeholder => "64804", :type => "text"}/  
        / Form Side
        #checkout-info.small-4.columns
          / Info Side
          %img#cards-image{:alt => "", :src => image_path("cards.svg")}/
          .hr-with-margin
            = render partial:'/artists/reward', pledge: true, collection: @artist.rewards, locals: {pledge: false, edit: false, new_pledge: true}
        / row
        .row.pad-top
          .small-12.columns
            .payment-errors
              = @stripe_errors if @stripe_errors
            = submit_tag "Submit", class: "button button-green"
