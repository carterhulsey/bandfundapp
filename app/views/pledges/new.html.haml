%section#profile
  .container
    .row
      .small-8.columns
        = form_for @pledge, url: reward_pledges_path(params[:reward_id]) do |form|
          %p
            = form.label :credit_card
            = form.text_field :credit_card
          %p
            = form.label :price, "Price in Dollars"
            = form.text_field :price
          = submit_tag
      .small-4.columns
        .stats
          .stat
            %h5= @reward.title
          .hr
          .stat
            %h5= @reward.description
          .hr
          .stat
            %h5= @reward.price
        